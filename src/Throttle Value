--[[

================
==THROTTLE VAL==
================
Riccardo Airbass
Telemetry script per scrivere sullo schermo il risulatato della funzione getFieldInfo. Provato su Radiomaster Boxer.

--]]
-- nessuna variabile dichiarata

local function init()
	a = getFieldInfo("thr")	                        -- a è una table. dimostrato con type(a).				
end			

local function run ()
	lcd.clear()				        -- pulisce lo schermo dalla videata del modello 
	lcd.drawText(10,10,"Thr:",MIDSIZE)
	lcd.drawText(10,30,"indice:",MIDSIZE)
	lcd.drawText(80,10,tostring(a["name"]),MIDSIZE)	--scrive il valore -- $$$$$ sintassi normale; "id" è l'indice restituito nella tabella !!!!!!$$$$$
	lcd.drawText(80,30,tostring(a.id),MIDSIZE)	--scrive l'indice  -- $$$$$ sintactic sugar; comodo per rappresentare record !!!!!!$$$$$
end

return {run=run, init=init}
